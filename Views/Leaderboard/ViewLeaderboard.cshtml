@model Milestone3WebApp.Models.LeaderboardRankModel

<h2>View Leaderboard</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="ViewLeaderboard" method="post">
    <div class="form-group">
        <label>Leaderboard ID</label>
        <input asp-for="LeaderboardID" class="form-control" />
        <span asp-validation-for="LeaderboardID" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">View Leaderboard</button>
</form>