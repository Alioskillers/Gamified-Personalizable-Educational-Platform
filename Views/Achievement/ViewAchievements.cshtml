@model IEnumerable<Milestone3WebApp.Models.AchievementModel>

<h2>Your Achievements</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Achievement ID</th>
                <th>Badge Title</th>
                <th>Description</th>
                <th>Date Earned</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var achievement in Model)
            {
                <tr>
                    <td>@achievement.AchievementID</td>
                    <td>@achievement.BadgeTitle</td>
                    <td>@achievement.Description</td>
                    <td>@achievement.DateEarned.ToString("yyyy-MM-dd")</td>
                    <td>@achievement.Type</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No achievements available.</p>
}