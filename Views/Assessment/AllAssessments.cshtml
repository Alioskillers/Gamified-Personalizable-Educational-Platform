@model IEnumerable<AssessmentViewModel>

<h2>All Assessments</h2>

<div>
    <h4>View Learner's Assessments</h4>
    <label for="LearnerID">Enter Learner ID:</label>
    <input type="number" id="LearnerID" class="form-control" placeholder="Enter Learner ID" required />
    <button class="btn btn-primary" id="view-learner-assessments-btn">View Learner's Assessments</button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Assessment ID</th>
            <th>Assessment Name</th>
            <th>Course ID</th>
            <th>Module ID</th>
            <th>Type</th>
            <th>Total Marks</th>
            <th>Passing Marks</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assessment in Model)
        {
            <tr>
                <td>@assessment.ID</td>
                <td>@assessment.AssessmentName</td>
                <td>@assessment.CourseID</td>
                <td>@assessment.ModuleID</td>
                <td>@assessment.Type</td>
                <td>@assessment.TotalMarks</td>
                <td>@assessment.PassingMarks</td>
                <td>@assessment.Description</td>
            </tr>
        }
    </tbody>
</table>

<script>
    document.getElementById('view-learner-assessments-btn').addEventListener('click', function () {
        const learnerID = document.getElementById('LearnerID').value;

        if (!learnerID) {
            alert('Please enter a valid Learner ID.');
            return;
        }

        // Redirect dynamically with the learner ID
        const url = '@Url.Action("ViewLearnerAssessments", "Assessment")';
        window.location.href = `${url}?learnerID=${learnerID}`;
    });
</script>