<h2 style="text-align: center; font-family: Arial, sans-serif; margin-bottom: 20px;">Profile Picture</h2>

<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; margin-top: 30px;">
    @if (ViewBag.FilePath != null)
    {
        <div style="border: 2px solid #ccc; padding: 10px; background-color: #f9f9f9;">
            <img src="@ViewBag.FilePath" alt="Profile Picture" style="width: 300px; height: 300px; object-fit: cover;" />
        </div>
    }
    else
    {
        <p style="text-align: center; font-size: 18px; color: #555;">No profile picture uploaded yet.</p>
    }

    <div style="margin-top: 20px;">
        <a asp-action="Index" asp-route-instructorID="@ViewBag.InstructorID" class="btn btn-secondary" style="padding: 10px 20px; font-size: 16px;">Back to Profile</a>
    </div>
</div>